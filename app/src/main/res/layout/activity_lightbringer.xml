<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lightbringer">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="ExtraText">
        // Linear layout da logo
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="120dp"
                android:src="@drawable/ic_launcher_background"/>
            <TextView
                android:id="@+id/logonome"
                android:textSize="32dp"
                android:text="LOGO"

                android:gravity="center"
                android:layout_width="120dp"
                android:layout_height="50dp"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/livroPrincipal1"
            android:layout_width="200dp"
            android:layout_height="310dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:src="@drawable/lightbringer"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lightbringer"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textSize="28dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autor: Claire Legrand"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:textSize="19dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genero: Fantasia"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:textSize="19dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/estrela1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/estrelaamarela"/>
            <ImageView
                android:id="@+id/estrela2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/estrelaamarela"/>
            <ImageView
                android:id="@+id/estrela3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/estrelaamarela"/>
            <ImageView
                android:id="@+id/estrela4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/estrelaamarela"/>
            <ImageView
                android:id="@+id/estrela5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/estrelacinz"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"

            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="125dp"
            android:text="DESCRIÇÃO"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Duas rainhas, separadas por mil anos, devem enfrentar seus destinos finais.
A rainha Rielle, afastada de tudo que ama, volta-se para Corien e suas promessas de glória. Enquanto isso, sussurros do Empirium lentamente a enlouquecem, incitando-a a abrir o Portão. Separada de Audric e Ludivine, ela assume o papel de Rainha de Sangue e seu lugar ao lado de Corien, determinada a se tornar o monstro que o mundo acredita que ela seja.
"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/lerlivro"
            android:text="LER"
            android:textColor="@color/white"
            android:textSize="38dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/laranja"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>
</ScrollView>