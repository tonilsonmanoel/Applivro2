<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".livros.Os_Doentes">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="ExtraText">
        // Linear layout da logo
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="120dp"
                android:src="@drawable/ic_launcher_background"/>
            <TextView
                android:id="@+id/logonome"
                android:textSize="32dp"
                android:text="LOGO"

                android:gravity="center"
                android:layout_width="120dp"
                android:layout_height="50dp"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/livroPrincipal1"
            android:layout_width="250dp"
            android:layout_height="370dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:src="@drawable/os_doentes_do_doutor_garcia"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Os Doentes do Doutor García"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="28dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autor: Almudena Grandes"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:textSize="19dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genero: Ficção"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:textSize="19dp" />

        <ImageView
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:src="@drawable/estrelas5"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="125dp"
            android:text="DESCRIÇÃO"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            android:layout_marginRight="10dp"
            android:text="Depois da vitória de Franco na Guerra Civil Espanhola, o Doutor Guillermo García Medina continua a viver em Madrid sob uma falsa identidade, a mesma que o salvou de ser fuzilado e que foi um presente de Manuel Arroyo Benítez, um diplomata republicano a quem salvara a vida uns anos antes. Julgando que nunca mais o veria, acaba por encontrar-se com Manuel em 1946, deixando-se recrutar para uma missão secreta e muito perigosa: a de se infiltrar na rede clandestina de evasão de criminosos de guerra fugidos do Terceiro Reich para a Argentina, dirigida por Clara Stauffer, uma poderosa mulher de nacionalidade alemã e espanhola, a partir do pacato bairro de Argüelles.
"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/lerlivro"
            android:text="LER"
            android:textColor="@color/white"
            android:textSize="38dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/laranja"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>
</ScrollView>