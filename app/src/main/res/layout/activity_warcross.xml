<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".livros.Warcross">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="ExtraText">
        // Linear layout da logo
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cinz"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/logo2branco"/>

            <ImageView
                android:id="@+id/livroPrincipal1"
                android:layout_width="250dp"
                android:layout_height="370dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:src="@drawable/_1bfds3t8kl" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Warcross: 1"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="28dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autor: Marie Lu"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:textSize="19dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genero: Ficção"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:textSize="19dp" />

        <ImageView
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:src="@drawable/estrelas5"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="125dp"
            android:text="DESCRIÇÃO"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:text="Autora das bem-sucedidas trilogias Legend e Jovens de Elite e nome forte da literatura jovem internacional, Marie Lu mergulha no mundo da tecnologia em Warcross. Neste eletrizante thriller de ficção científica, Emika Chen é uma hacker de 18 anos com uma vida financeira difícil. Num golpe de sorte do destino, ela se torna milionária ao ser contratada pelo criador do Warcross, um jogo de realidade virtual que virou febre em todo o mundo, para evitar um ataque em massa que estaria sendo planejado contra a plataforma – e seus milhões de usuários – durante a cerimônia de encerramento de um grande campeonato."
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/lerlivro"
            android:text="LER"
            android:textColor="@color/white"
            android:textSize="38dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/laranja"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

</ScrollView>