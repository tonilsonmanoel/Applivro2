<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".livros.QueenOfTheWildwood">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="ExtraText">
        // Linear layout da logo
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="120dp"
                android:src="@drawable/ic_launcher_background"/>
            <TextView
                android:id="@+id/logonome"
                android:textSize="32dp"
                android:text="LOGO"

                android:gravity="center"
                android:layout_width="120dp"
                android:layout_height="50dp"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/livroPrincipal1"
            android:layout_width="200dp"
            android:layout_height="310dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:src="@drawable/queen"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Queen Of The Wildwood: A Fairy Tale Romance"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textSize="28dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autor: Angela J. Ford"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:textSize="19dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genero: Fantasia, Romance"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:textSize="19dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/estrela1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/estrelaamarela"/>
            <ImageView
                android:id="@+id/estrela2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/estrelaamarela"/>
            <ImageView
                android:id="@+id/estrela3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/estrelaamarela"/>
            <ImageView
                android:id="@+id/estrela4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/estrelaamarela"/>
            <ImageView
                android:id="@+id/estrela5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/estrelaamarela"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"

            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="125dp"
            android:text="DESCRIÇÃO"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Magia mortal, um cavaleiro bonito e uma rainha do mal.
Yula é uma maga, mas sua magia volátil não traz nada além de infelicidade.
Após a morte de sua amada irmã, ela é sentenciada a servir às Irmãs da Luz, que usam seus poderes para proteger os aldeões da floresta encantada.
Quando um acidente fatal coloca a cidade em grave perigo, Yula não tem escolha a não ser encontrar a única pessoa que pode ajudá-la - a lendária e malvada Rainha das Trevas.
"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/lerlivro"
            android:text="LER"
            android:textColor="@color/white"
            android:textSize="38dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/laranja"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

</ScrollView>